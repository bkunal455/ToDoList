<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
	    <link rel="stylesheet" type="text/css" href="/css/todo.css">
	    <script src="https://kit.fontawesome.com/91e4a42abb.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div id="bg">
         <div id="header">
             <h1><i class="fas fa-check-double"></i> TO-DO</TO-DO></h1>
         </div>
         <div id="container">
             <div id="container1">
                 <form class="con1" action="/create-task" method="POST">
                     <div id="text-box">
                        <i id="icon1" class="fas fa-pen"></i>&nbsp&nbsp
                      <input id="task-text" style="border-radius: 8px;" type="text" name="description" placeholder="Your task here...">
                     </div>
                     <div class="box">
                            <i id="icon2" class="fas fa-clipboard"></i> &nbsp&nbsp
                        <select name="option">
                            <option>Personal</option>
                            <option>Work</option>
                            <option>School</option>
                            <option>College</option>
                            <option>Others</option>
                        </select>
                     </div>
                     <div id="date-box">
                        <i id="icon3" class="far fa-calendar"></i>&nbsp&nbsp
                        <input id="date" type="date" name="date" required>
                     </div>
                     <div id="butn">
                        <button class="btn button1" type="submit"><i class="fas fa-plus-square"></i> Add Task</button>
                     </div>
                 </form>       
             </div>
             <div class="container2">
                 <div class="upcoming-task">
                      <div>
                    <h3 style="margin-left: 10px;font-family: Verdana, Geneva, Tahoma, sans-serif;"><i style="font-size: 20px;" class="fas fa-meteor"></i>&nbsp&nbspUpcoming Tasks</h3>
                     </div>
                     <% for(let i of TaskList){ %>
                       <% if(i.status == "upcoming") { %>
                    <div id="upcoming-task-info">
                           <div style="margin-left: -1.8vw; font-family: sans-serif; font-size: 17px;">
                              <h5><%= i.description %></h5>
                               <h5 style="margin-top: -11px;"> <%= i.date %></h5>
                           </div>    
                           <%  if(i.option == "Personal") { %>
                           <div id="option-info">
                               <p id="option-text">~<%= i.option %>~</p>
                           </div>
                        <%   } %> <% if(i.option == "Work") {  %>
                           <div id="option-info">
                               <p id="option-text">~<%= i.option %>~</p>
                           </div>
                       <%  } %> <% if(i.option == "School") {  %>
                           <div id="option-info">
                               <p id="option-text">~<%= i.option %>~</p>
                           </div>
                       <%  } %> <% if(i.option == "College") {  %>
                           <div id="option-info">
                               <p id="option-text">~<%= i.option %>~</p>
                           </div>
                       <%  } %> <% if(i.option == "Others") {  %>
                           <div id="option-info">
                               <p id="option-text">~<%= i.option %>~</p>
                           </div>
                       <%  } %>
                       <div id="options">
                        <a href="/delete-task/?id=<%= i._id %>" class="red" style="color: red;"><i style="font-size: 16px;" class="far fa-times-circle" ></i></a>&nbsp&nbsp&nbsp
                        <a href="/completed-task/?id=<%= i._id %>" class="green" style="color: green;"><i class="fas fa-check"></i></a>
                       </div>
                    </div>     
                    <%  } %>  
                    <% } %>           
                 </div>
                 <div class="completed-task">
                        <div>
                        <h3 style="margin-left: 10px;font-family: Verdana, Geneva, Tahoma, sans-serif;"><i style="font-size: 20px;" class="fas fa-check-circle"></i>&nbsp&nbspCompleted Tasks</h3>
                         </div>
                         <% for(let i of TaskList){ %>
                           <% if(i.status == "completed") { %>
                        <div id="completed-task-info">
                               <div style="margin-left: -2vw; font-family: sans-serif; font-size: 17px;">
                                  <h5><%= i.description %></h5>
                                   <h5 style="margin-top: -11px;"> <%= i.date %></h5>
                               </div>    
                               <%  if(i.option == "Personal") { %>
                               <div id="option-info">
                                   <p id="option-text">~<%= i.option %>~</p>
                               </div>
                            <%   } %> <% if(i.option == "Work") {  %>
                               <div id="option-info">
                                   <p id="option-text">~<%= i.option %>~</p>
                               </div>
                           <%  } %> <% if(i.option == "School") {  %>
                               <div id="option-info">
                                   <p id="option-text">~<%= i.option %>~</p>
                               </div>
                           <%  } %> <% if(i.option == "College") {  %>
                               <div id="option-info">
                                   <p id="option-text">~<%= i.option %>~</p>
                               </div>
                           <%  } %> <% if(i.option == "Others") {  %>
                               <div id="option-info">
                                   <p id="option-text">~<%= i.option %>~</p>
                               </div>
                           <%  } %>
                           <div id="options">
                            <a href="/delete-task/?id=<%= i._id %>" class="red" style="color: red;"><i class="far fa-times-circle" ></i></a>
                           </div>
                        </div>     
                        <%  } %>  
                        <% } %>     
                 </div>
                 <div id="footer">

                 </div>
              </div>  
         </div> 
         </div>   
        <script type="text/javascript" src="/js/home.js"></script>
    </body>
</html>